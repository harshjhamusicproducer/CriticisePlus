{
  "name": "microservices-monorepo",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:auth\"",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "dev:auth": "cd apps/auth-service && npm run dev",
    "build": "npm run build:frontend && npm run build:auth",
    "build:frontend": "cd apps/frontend && npm run build",
    "build:auth": "cd apps/auth-service && npm run build",
    "install:all": "npm install && cd apps/frontend && npm install && cd ../auth-service && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}